<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="XFPINLoginSample.Views.PINSamplesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:sampleViews="clr-namespace:XFPINLoginSample.Views.SampleViews"
    xmlns:vm="clr-namespace:XFPINLoginSample.ViewModels"
    xmlns:xfpinview="clr-namespace:XFPINView;assembly=XFPINView"
    Title="{Binding Title}"
    ios:Page.UseSafeArea="true">
    <ContentPage.BindingContext>
        <vm:PINSamplesPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="15">
                <sampleViews:BoxShapeSampleView />
                <sampleViews:ColorSampleView />
                <sampleViews:BoxBackgroundColorSampleView />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
