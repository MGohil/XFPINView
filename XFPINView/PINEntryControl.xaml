<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="XFPINView.PINEntryControl"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <Grid>
            <!--  This Textbox stays behind the scene to bring up the keyboard and take user input  -->
            <Entry
                x:Name="hiddenTextEntry"
                HorizontalOptions="Center"
                Keyboard="Numeric"
                Opacity="0"
                Style="{StaticResource PINEntryStyle}"
                WidthRequest="50">
                <Entry.FontSize>
                    <OnPlatform
                        x:TypeArguments="x:Double"
                        Android="18"
                        Default="18"
                        iOS="22">
                        <On Platform="UWP" Value="18" />
                    </OnPlatform>
                </Entry.FontSize>
            </Entry>
            <StackLayout
                x:Name="PINBoxContainer"
                HorizontalOptions="CenterAndExpand"
                InputTransparent="False"
                Orientation="Horizontal" />
        </Grid>
    </ContentView.Content>
</ContentView>
